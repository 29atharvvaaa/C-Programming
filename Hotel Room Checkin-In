#include <stdio.h>
int main() {
    char name[50];
    int room_type, days, total_bill, tax, discount;
    printf("Enter your Name:(ONLY FIRST NAME)\n");
    scanf("%s", name);
    printf("Enter Room Type (1 -> AC Room, 2 -> Non-AC Room)\n");
    scanf("%d", &room_type);
    printf("Enter number of Days staying:\n");
    scanf("%d", &days);
    if(room_type == 1) {
        total_bill=days*1500;
    }
    else if(room_type == 2) {
        total_bill=days*1000; 
    }
    if(days >= 7) {
        discount=(total_bill*10)/100;
        total_bill=total_bill-discount;
        printf("Your Total Bill after 10 percent Discount is Rs. %d\n", total_bill);
    }
    if(total_bill >= 5000) {
        tax=(total_bill*12)/100;
        total_bill=total_bill+tax;
        printf("Your Total Bill after 12 percent Service Tax is Rs. %d\n", total_bill);
    }
    printf("Your Total Bill is Rs. %d\n", total_bill);
    return 0;
}
